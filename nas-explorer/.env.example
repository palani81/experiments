# NAS Explorer Configuration
# Copy this to .env and edit values

# Path to the NAS mount point (must be mounted read-only)
NAS_MOUNT_PATH=/mnt/nas

# Authentication token (change this!)
AUTH_TOKEN=change-me-to-a-secure-token

# Database path (SQLite)
DATABASE_PATH=./data/nas_explorer.db

# Preview cache directory
CACHE_PATH=./cache/previews

# Server settings
HOST=0.0.0.0
PORT=8000

# Scanning settings
SCAN_BATCH_SIZE=1000
MAX_TEXT_EXTRACT_MB=100
MAX_TEXT_STORE_KB=50
HASH_SAMPLE_SIZE_KB=64

# Optional: HTTPS (set both for HTTPS)
# SSL_CERT_PATH=./ssl/cert.pem
# SSL_KEY_PATH=./ssl/key.pem
